<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.trials.sample001">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.trials.sample001.SampleApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.trials.sample001.ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.trials.sample001.ui.detail.DetailActivity"
            android:parentActivityName="com.trials.sample001.ui.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>